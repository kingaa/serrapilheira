\begin{frame}{Binomial ratio}
  For $n,r,\ell,s\in{\Zp^\Demes}$, define the \emph{binomial ratio}
  \begin{equation*}
    \BinRatio{n}{\ell}{r}{s}\colonequals
    \begin{cases}
      \displaystyle\prod_{i\in\Demes}{\frac{\tbinom{n_i-\ell_i}{r_i-s_i}}{\tbinom{n_i}{r_i}}},
      & \text{if}\ \forall i\ n_i\ge{\Set{\ell_i,r_i}}\ge{s_i}\ge{0},\\
      0, & \text{otherwise}.
    \end{cases}
    %% \begin{cases}
    %%   \frac{\displaystyle\prod_{i\in\Demes}{\binom{n_i-\ell_i}{r_i-s_i}}}%
    %%        {\displaystyle\prod_{i\in\Demes}{\binom{n_i}{r_i}}},
    %%        & \text{if}\ \forall i\ n_i\ge{\Set{\ell_i,r_i}}\ge{s_i}\ge{0},\\
    %%        0, & \text{otherwise}.
    %% \end{cases}
  \end{equation*}
  Observe that $\BinRatio{n}{\ell}{r}{s}\in{[0,1]}$.
  Moreover,
  \begin{equation*}
    \sum_{s\in\Zp^{\Demes}}\BinRatio{n}{\ell}{r}{s}\binom{\ell}{s}=1.
  \end{equation*}
\end{frame}

\section{Theorems}

\subsection{Pruned genealogies}

\begin{frame}{Theorem: likelihood of a pruned genealogy}

  \begin{onlyenv}<1,4>
    <<upo2,fig.dim=c(6,54/16),out.width="70%",results="hide">>=
    @
  \end{onlyenv}

  \note<1>[item]{We compute the likelihood by integrating over all possible histories of the population process.}
  \note<1>[item]{This can be accomplished sequentially, in the forward-time direction.}
  \note<4>[item]{Of course we don't see the deme-histories of the lineages, so we must integrate out the painting as well.}

  \begin{onlyenv}<2>
    Suppose that $\P=(\Y,\Z)$ is a given pruned genealogy with depth $\T$.

    Define
    \begin{equation*}
      \phi_u(x,y,y')\coloneq\BinRatio{n(x)}{\ell(y')}{r^{u}}{s(y,y')}\,Q_{u}(y,y').
    \end{equation*}

    Here, $Q=1$ if the local structure of $\P$ is compatible with an event of type $u$ at that time;
    $Q=0$ otherwise.
  \end{onlyenv}

  \begin{onlyenv}<3>
    If $w=w(t,x)$ satisfies the initial condition $w(0,x)=p_0(x)$ and the filter equation
    \begin{equation*}
      \begin{aligned}
        \frac{\partial{w}}{\partial{t}}(t,x)=
        &\sum_u{\int{w(t,x')\,\alpha_u(t,x',x)\,\phi_u(x,\Yt_t,\Y_t)\,\dd{x'}}}
        -\sum_u{\int{w(t,x)\,\alpha_u(t,x,x')\,\dd{x'}}}\\
        &\quad+\sum_{e\in\event{\P}}{\delta(t,e)\,\left\{\sum_u{\int{w(t,x')\,\alpha_u(t,x',x)\,\phi_u(x,\Yt_t,\Y_t)\,\dd{x'}}}-w(t,x)\right\}},
      \end{aligned}
    \end{equation*}
    then the likelihood of $\P$ is
    \begin{equation*}
      \lik(\P)=\int{w(\T,x)\,\dd{x}}.
    \end{equation*}
  \end{onlyenv}

  \note<3>[item]{$\Yt_t$ denotes left-limit.}
  \note<3>[item]{The sum is over all events in $\P_t$.}

\end{frame}

\subsection{Obscured genealogies}

\begin{frame}
  {Theorem: likelihood of an obscured genealogy}

  \begin{onlyenv}<1>
    <<upo3,fig.dim=c(6,54/16),out.width="70%",results="hide">>=
    @
  \end{onlyenv}

  \note<1>[item]{We accomplish this by defining a Markov process on the space of paintings.}

  \begin{onlyenv}<2>
    Let $(\T,\Z)$, be a given obscured genealogy.
    Then there are probability kernels $\pi$ and $q$ such that if
    \begin{equation*}
      \begin{gathered}
        \beta_u(t,x,x',y,y')=\alpha_u(t,x,x')\,\pi_u(t,x,x',y,y'),\qquad
        \psi_u(t,x,x',y,y')=\frac{\phi_u(x',y,y')}{\pi_u(t,x,x',y,y')},
      \end{gathered}
    \end{equation*}
    and if $w=w(t,x,y)$ satisfies
    the initial condition $w(0,x,y)=p_0(x)\,q(x,y)$
    and the filter equation
    \begin{equation*}
      \begin{aligned}
        \frac{\partial{w}}{\partial{t}}=
        &\sum_{uy'}{\int{w(t,x',y')\,\beta_u(t,x',x,y',y)\,\psi_u(t,x',x,y',y)\,\dd{x'}}}
        -\sum_{uy'}{\int{w(t,x,y)\,\beta_u(t,x,x',y,y')\,\dd{x'}}}\\
        &+\sum_{e\in\event{\Z}}{\delta(t,e)\,\left\{\sum_{uy'}{\int{w(t,x',y')\,\beta_u(t,x',x,y,y')\,\psi_u(t,x',x,y',y)\,\dd{x'}}}-w(t,x,y)\right\}},
      \end{aligned}
    \end{equation*}
  \end{onlyenv}

  \note<2>[item]{Here, $y$ ranges over the space of colorings of $\Z$.}

  \begin{onlyenv}<3>
    then the likelihood of $\Z$ is
    \begin{equation*}
      \lik(\Z)=\sum_y{\int{w(T,x,y)\,\dd{x}}}.
    \end{equation*}
  \end{onlyenv}

  \begin{onlyenv}<3>
    <<upo3,fig.dim=c(6,54/16),out.width="50%",results="hide">>=
    @
  \end{onlyenv}

\end{frame}

